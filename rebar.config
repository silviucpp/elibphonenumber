{pre_hooks, [{"(linux|darwin)", compile, "make nif_compile DRIVER_REV=v8.9.16"}]}.
{post_hooks, [{"(linux|darwin)", clean, "make nif_clean"}]}.

{cover_enabled, true}.
{cover_print_enable, true}.

{deps, [
    {trie, ".*", {git, "https://github.com/okeuday/trie.git", {tag, "v1.7.4"}}}
]}.


{port_specs, [{so_name, "phonenumber_util_nif.so"}]}.

{erl_opts, [
    warnings_as_errors ,
    warn_export_all,
    {parse_transform, lager_transform}
]}.
